@model IEnumerable<DoAnNhom1.Models.Tree>
@{
    ViewBag.Title = "TC";
    Layout = "~/Views/Shared/index.cshtml";
}

<div class="PlantTrees-bg" style="background-color: #1e3937;">
    <div class="container " style="padding-top:5.5rem;">
        <h2>Danh sách sản phẩm</h2>
            <div class="row">
                @foreach (var pro in Model)
                {
                    <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card-pro">
                            <img src="@Url.Content(pro.ImageTree)" height="150" width="150" />
                            <p>@Html.DisplayFor(model => pro.NameTree)</p>
                            <p>@Html.DisplayFor(model => pro.Price)</p>
                            <a href="/ShoppingCart/AddToCart/@pro.TreeID" class="btn btn-default">Buy</a>
                        </div>
                    </div>
                }
          </div>
    </div>
</div>
