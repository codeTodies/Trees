@model DoAnNhom1.Models.Customer
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/index.cshtml";
}

<link rel="shortcut icon" href="~/image/logo.jpg" type="image/x-icon">
<link rel="stylesheet" href="~/Content/assets/Contacts.css" />
<body>
    @if (TempData["nofi"] != null)
    {
        <script>
         alert('@Html.Raw(Json.Encode(TempData["AlertMessage"]))');
        </script>
    }
    <section class="contact">
        <div class="content">
            <h2>Liên hệ với chúng tôi</h2>
            <p>GreenRoot</p>
        </div>
        <div class="container">
            <div class="contactInfo">
                <div class="box">
                    <div class="icon"><ion-icon name="navigate-outline"></ion-icon></div>
                    <div class="text">
                        <h3>Địa chỉ</h3>
                        <p>234, ấp B2, Xã Thạnh Lợi, Vĩnh Thạnh,<br />TP.Cần Thơ</p>
                    </div>
                </div>

                <div class="box">
                    <div class="icon"><ion-icon name="call-outline"></ion-icon></div>
                    <div class="text">
                        <h3>Số điện thoại</h3>
                        <p>0338-397-638</p>
                    </div>
                </div>

                <div class="box">
                    <div class="icon"><ion-icon name="mail-outline"></ion-icon></div>
                    <div class="text">
                        <h3>Email</h3>
                        <p>GreenGroot@gmail.com</p>
                    </div>
                </div>
                <h2 class="txt"><i class="fa-regular fa-address-card mr-2"></i>Connect with us</h2>
                <ul class="sci">
                    <li><a href="#"></a><ion-icon name="logo-facebook"></ion-icon></li>
                    <li><a href="#"></a><ion-icon name="logo-instagram"></ion-icon></li>
                    <li><a href="#"></a><ion-icon name="logo-discord"></ion-icon></li>
                </ul>
            </div>
            <div class="contactForm ">
                @using (Html.BeginForm())
                {
                    <h2>Trở thành đối tác của chúng tôi!</h2>
                    <div class="inputBox">
                        @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ và tên" } })
                    </div>

                    <div class="inputBox">
                        @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    </div>
                    <div class="inputBox">
                        @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control", placeholder = "Số điện thoại" } })
                    </div>


                    <div class="inputBox">
                        <input type="submit" value="Gửi" />
                    </div>
                }
            </div>

        </div>
        <div class="txt-after">
            <h2 class="txt">Connect with us</h2>
            <ul class="sci">
                <li><a href="#"></a><ion-icon name="logo-facebook"></ion-icon></li>
                <li><a href="#"></a><ion-icon name="logo-instagram"></ion-icon></li>
                <li><a href="#"></a><ion-icon name="logo-discord"></ion-icon></li>
            </ul>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
