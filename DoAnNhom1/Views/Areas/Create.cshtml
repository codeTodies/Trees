@model DoAnNhom1.Models.Area

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Tạo vùng</h2>


@using (Html.BeginForm("Create", "Areas", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Tên miền
                    @{Html.RenderAction("SelectRegion", "Areas");}
                </div>

                <div class="form-group">
                    Tên vùng
                    @Html.EditorFor(model => model.NameArea, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameArea, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Hình ảnh vùng
                    <div class="input-group">
                        <img src="@Url.Content(Model.ImgArea)" class="img-fluid" id="previewImg" width="200" height="150" />
                        <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                        @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                        <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
