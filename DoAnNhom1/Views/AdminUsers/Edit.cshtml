@model DoAnNhom1.Models.AdminUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Chỉnh sửa thông tin người dùng</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    Tên người dùng
                    @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Quyền
                    @Html.EditorFor(model => model.RoleUser, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Mật khẩu
                    @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                        <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
