@model DoAnNhom1.Models.Region

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Tạo miền</h2>
@using (Html.BeginForm("Create", "Regions", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    Tên Miền
                    @Html.EditorFor(model => model.NameRe, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    Hình ảnh miền
                    <div class="input-group">
                        <img src="@Url.Content(Model.ImgRe)" class="img-fluid" id="previewImg" width="200" height="150" />
                        <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                        @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
