@model DoAnNhom1.Models.Region

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Chỉnh sửa miền</h2>

@using (Html.BeginForm("Edit", "Regions", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.HiddenFor(model => model.IDRe)

                <div class="form-group">
                    Tên miền
                    @Html.EditorFor(model => model.NameRe, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    Hình ảnh miền
                    <img src="@Url.Content(Session["imgPath"].ToString())" class="img-fluid" id="previewImg" />
                    <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                    @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Quay lại danh sách", "Index" ,null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
